<form role="form">
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.text_field :amount, :class=> 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :usage %>
    <%= f.text_field :usage, :class=> 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :term %>
    <%= f.select :term, ['6 months', '9 months', '12 months', '15 months', '18 months'], {},:class=> 'form-control' %>
  </div>
</form>